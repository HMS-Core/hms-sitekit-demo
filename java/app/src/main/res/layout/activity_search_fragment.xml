<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:orientation="vertical"
    tools:context=".SearchFragmentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:paddingStart="5dp"
            android:text="@string/search_fragment_label"
            android:textSize="16sp" />

        <fragment
            android:id="@+id/demo_fragment"
            android:name="com.huawei.hms.site.widget.SearchFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:paddingStart="5dp"
            android:text="@string/SearchFragmentResult"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/demo_fragment_textView_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center_vertical"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textIsSelectable="true"
            android:textSize="14sp" />
    </LinearLayout>

</ScrollView>
